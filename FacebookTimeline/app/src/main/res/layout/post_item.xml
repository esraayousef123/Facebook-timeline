<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            tools:src="@drawable/img"
             />
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            tools:text="Esraa Yousef"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="2 hrs ."
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintStart_toStartOf="@id/profileName"
            app:layout_constraintTop_toBottomOf="@id/profileName" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintStart_toEndOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/profileName"
            android:src="@drawable/olp"
            app:layout_constraintTop_toTopOf="@id/time"
            app:layout_constraintBottom_toBottomOf="@id/time"
            android:layout_marginLeft="2dp"

            />
        <TextView
            android:id="@+id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Buckle up, becouse change is coming to the wordPress"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toTopOf="@id/postImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profilePic"
            app:layout_constraintVertical_bias="0.242" />
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/never_give_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:layout_editor_absoluteX="0dp" />
        <ImageView
            android:id="@+id/number_of_likes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/likeimage"
            app:layout_constraintTop_toBottomOf="@id/postImage"
            app:layout_constraintBottom_toTopOf="@id/likeButton"
            android:background="#1877f2"
            android:layout_marginLeft="5dp"

            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/number_of_likes"
            app:layout_constraintBottom_toBottomOf="@id/number_of_likes"
            app:layout_constraintTop_toBottomOf="@id/postImage"
            app:layout_constraintStart_toEndOf="@id/number_of_likes"
            />
        <TextView
            android:id="@+id/numberof_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 shares"
            app:layout_constraintTop_toBottomOf="@id/postImage"
            app:layout_constraintBottom_toTopOf="@id/shareButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@id/like"
            app:layout_constraintBottom_toBottomOf="@id/like"


            />
        <View
            android:layout_width="match_parent"
            android:layout_height=".3dp"
            app:layout_constraintTop_toBottomOf="@id/numberof_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5sp"
            android:background="@color/black"
            />

        <Button
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0.5dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/like_icon"
            android:text="Like"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/commentButton"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@id/postImage" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/shareButton"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray"/>
        <Button
            android:id="@+id/commentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0.5dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/comment_icon"
            android:text="Comment"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/shareButton"
            app:layout_constraintStart_toEndOf="@id/likeButton"


            app:layout_constraintTop_toBottomOf="@id/postImage" />
        <Button
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="0.5dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/share_icon"
            android:text="share"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/commentButton"
            app:layout_constraintTop_toBottomOf="@id/postImage" />
















    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.cardview.widget.CardView>


